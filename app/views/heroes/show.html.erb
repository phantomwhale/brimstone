<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block mx-auto block text-center" id="notice"><%= notice %></p>
  <% end %>

  <%= render "heroes/hero", hero: @hero %>

  <!-- Action Buttons -->
  <div class="max-w-4xl mx-auto mt-6 text-center space-x-4">
    <%= link_to "Edit this hero", edit_hero_path(@hero), class: "rounded-lg py-3 px-6 bg-amber-600 hover:bg-amber-700 text-white font-medium shadow-lg transition-colors" %>
    <%= link_to "Back to heroes", heroes_path, class: "rounded-lg py-3 px-6 bg-gray-600 hover:bg-gray-700 text-white font-medium shadow-lg transition-colors" %>
    <%= button_to "Destroy this hero", @hero, method: :delete, 
        class: "rounded-lg py-3 px-6 bg-red-600 hover:bg-red-700 text-white font-medium shadow-lg transition-colors",
        confirm: "Are you sure you want to destroy this hero?" %>
  </div>
</div>
