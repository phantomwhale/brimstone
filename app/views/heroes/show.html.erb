<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-900/50 mb-5 text-green-300 font-medium rounded-lg inline-block mx-auto block text-center border border-green-700" id="notice"><%= notice %></p>
  <% end %>

  <%= render "heroes/hero", hero: @hero %>

  <!-- Action Buttons -->
  <div class="max-w-4xl mx-auto mt-6 flex justify-center gap-4 flex-wrap">
    <%= link_to "Edit this hero", edit_hero_path(@hero), class: "btn-save" %>
    <%= link_to "Back to heroes", heroes_path, class: "btn-secondary" %>
    <%= button_to "Destroy this hero", @hero, method: :delete, class: "btn-danger", data: { turbo_confirm: "Are you sure you want to destroy this hero?" } %>
  </div>
</div>
