<%# Add Injury Form - Select from chart or custom %>
<button type="button" onclick="document.getElementById('injury-modal-<%= hero.id %>').showModal()" class="btn-add-affliction btn-add-injury">
  + Add Injury
</button>

<dialog id="injury-modal-<%= hero.id %>" class="affliction-modal">
  <div class="affliction-modal-content">
    <div class="affliction-modal-header affliction-modal-header-injury">
      <h2 class="font-western text-xl text-gold">Add Injury</h2>
      <button type="button" onclick="document.getElementById('injury-modal-<%= hero.id %>').close()" class="affliction-modal-close">&times;</button>
    </div>
    
    <div class="affliction-modal-body">
      <div class="affliction-section">
        <h3 class="affliction-section-title">From Injury Chart</h3>
        <div class="affliction-chart-grid">
          <% Injuries.all.each do |key, data| %>
            <%= button_to hero_injuries_path(hero, injury_key: key), 
                method: :post,
                class: "affliction-chart-option",
                form: { data: { turbo_frame: "_top" } } do %>
              <span class="affliction-chart-roll"><%= data['roll'] %></span>
              <span class="affliction-chart-name"><%= data['name'] %></span>
            <% end %>
          <% end %>
        </div>
      </div>
      
      <div class="affliction-divider">
        <span>or</span>
      </div>
      
      <div class="affliction-section">
        <h3 class="affliction-section-title">Custom Injury</h3>
        <%= form_with url: hero_injuries_path(hero), method: :post, class: "affliction-custom-form" do |f| %>
          <div class="affliction-form-group">
            <label class="affliction-form-label">Name</label>
            <input type="text" name="injury[name]" class="affliction-form-input" placeholder="Injury name..." required>
          </div>
          <div class="affliction-form-group">
            <label class="affliction-form-label">Description (optional)</label>
            <textarea name="injury[description]" class="affliction-form-textarea" placeholder="Describe the injury effects..."></textarea>
          </div>
          <div class="affliction-form-actions">
            <button type="submit" class="btn-add-affliction btn-add-injury">Add Custom Injury</button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</dialog>
